				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetHeight( 64 + self.Description:GetHeight() + 56 + self.Accept:GetHeight() + 16 );
			</OnLoad>
		</Scripts>
	</Frame>
	
	<!-- Not Enough Gold and no tokens. Display if attempt to login with a greater than level 20 character/ -->
	<Frame name="SubscriptionRequestDialog" topLevel="true" parent="GlueParent" enableMouse="true" frameStrata="DIALOG" hidden="true" inherits="ReactivateDialogBackground">
		<Size x="450" y="64"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="64"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GlueFontNormalLarge" text="ACCOUNT_REACTIVATE_TEXT">
					<Anchors>
						<Anchor point="TOPLEFT" x="32" y="-24"/>
						<Anchor point="TOPRIGHT" x="-32" y="-24"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="Accept" inherits="GlueDialogButtonTemplate" text="REACTIVATE_ACCOUNT_NOW">
				<Size x="250" y="44"/>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeKey="$parent.Text"  relativePoint="BOTTOM" x="48" y="-16"/>
				</Anchors>
				<Scripts>
					<OnClick function="AccountReactivate_ReactivateNow"/>
				</Scripts>
			</Button>
			<Button parentKey="Cancel" inherits="GlueDialogButtonTemplate" text="ACCOUNT_REACTIVATE_CANCEL">
				<Size x="160" y="44"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Accept" relativePoint="RIGHT" x="-8" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						PlaySound("gsTitleOptionExit");
						self:GetParent():Hide();
						ReactivateAccountDialog_Open();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetHeight(self.Text:GetHeight() + 16 + self.Accept:GetHeight() + 40);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>